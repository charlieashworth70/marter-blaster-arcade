{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-debugger": "warn",
    "eqeqeq": "error",
    "prefer-const": "error",
    "no-var": "error",
    "camelcase": "warn",
    "no-alert": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-magic-numbers": ["warn", { "ignore": [0, 1, -1] }],
    "prefer-template": "warn",
    "arrow-body-style": ["warn", "as-needed"]
  },
  "overrides": [
    {
      "files": ["game.js"],
      "rules": {
        "no-magic-numbers": "off"
      }
    }
  ]
}